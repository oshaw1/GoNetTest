{{define "dataSection"}}
<div id="recentTestData">
    {{if .HasData}}
        <div class="test-result">
            <h3>ICMB Test Results for {{.ICMBTestResult.Host}}:{{.ICMBTestResult.Port}}</h3>
            <ul>
                <li>Packets: 
                    <ul>
                        <li>Sent = {{.ICMBTestResult.Sent}}</li>
                        <li>Received = {{.ICMBTestResult.Received}}</li>
                        <li>Lost = {{.ICMBTestResult.Lost}} ({{printf "%.1f" .LossPercentage}}% loss)</li>
                    </ul>
                </li>
                <li>Return-trip times:
                    <ul>
                        <li>Minimum = {{.ICMBTestResult.MinRTT}}</li>
                        <li>Maximum = {{.ICMBTestResult.MaxRTT}}</li>
                        <li>Average = {{.ICMBTestResult.AvgRTT}}</li>
                    </ul>
                </li>
            </ul>
        </div>
    {{else}}
        <p>No recent test data available.</p>
    {{end}}
</div>
{{end}}